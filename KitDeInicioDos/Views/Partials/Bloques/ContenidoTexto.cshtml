    var settingsModel = Model.Settings as ContenidoTextoAjustes;

    var titulo = !string.IsNullOrWhiteSpace(contentModel.Titulo) ? contentModel.Titulo : "";
    var subtitulo = !string.IsNullOrWhiteSpace(contentModel.Subtitulo) ? contentModel.Subtitulo : "";
    var contenidoTexto = !string.IsNullOrWhiteSpace(contentModel.TextoAformatear.ToString()) ? contentModel.TextoAformatear.ToString() : "";
    var estilo = settingsModel.Estilo;


    @*Noticia noticiaContenido = (Noticia)Umbraco.ContentAtRoot().DescendantsOrSelfOfType("noticia").FirstOrDefault();
