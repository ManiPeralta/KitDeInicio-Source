<section class="@(estilo != null ? $"mp{estilo}"  : "")">
    <div class="container">
        <div class="row pt-5 pb-5">
            <div class="col-md-12">
                <h2>@titulo</h2>
                <h4>@subtitulo</h4>

                @Html.Raw(contenidoTexto)
            </div>
        </div>
    </div>
</section>
